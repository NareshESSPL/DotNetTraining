@using help
@model hello

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>
<h4>Are you sure you want to delete this student?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Roll No</dt>
        <dd class="col-sm-10">@Model.RollNo</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>
</div>

<form asp-action="DeleteStudentConfirmed" method="post">
    <input type="hidden" name="rollno" value="@Model.RollNo" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@page
@model InvoiceApp.Pages.Invoices.IndexModel
@{
}
<h2 class="txt-center mb-3">Invoices</h2>
<a class="btn btn-primary mb-3" asp-page="Create">Create New Invoice</a>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Invoice No</th>
			<th>Status</th>
			<th>Client</th>
			<th>Total Price</th>
			<th>Issue Date</th>
			<th>Due Date</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody class="table-group-divider">
		@foreach( var invoice in Model.InvoiceList)
		{
			<tr>
				<td>@invoice.Id</td>
				<td>@invoice.Number</td>
				<td>@invoice.Status</td>
				<td>@invoice.ClientName</td>
				<td>@(invoice.Quantity* invoice.UnitPrice)$</td>
				<td>@invoice.IssueDate</td>
				<td>@invoice.DueDate</td>
				<td style="white-space : nowrap">
					<a class="btn btn-primary" asp-page="Edit" asp-route-id="@invoice.Id">Edit</a>
					<a class="btn btn-secondary" asp-page="Details" asp-route-id="@invoice.Id">Details</a>
					<a class="btn btn-danger" asp-page="Delete" asp-route-id="@invoice.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>

</table>
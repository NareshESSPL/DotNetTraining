@model Support.help

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@Model.Branch</dd>
        <dt class="col-sm-2">Document</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.DocumentPath))
            {
                    <a href="@Model.DocumentPath" target="_blank">View Document</a>
            }
        </dd>
    </dl>

    <form asp-action="DeleteStudent" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

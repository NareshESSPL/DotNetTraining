            @Html.ValidationMessageFor(emp => emp.Email, "", new { @class = "text-danger" })
        </div>

        <br />

        <div>
            @Html.LabelFor(emp => emp.Department)
            @Html.TextBoxFor(emp => emp.Department, new { @class = "form-control", placeholder = "Enter Department" })
            @Html.ValidationMessageFor(emp => emp.Department, "", new { @class = "text-danger" })
        </div>


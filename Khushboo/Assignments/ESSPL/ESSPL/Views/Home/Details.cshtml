@model ESSPL.Models.Help

@{
    ViewData["Title"] = "Help Details";
}

<h1>Help Details</h1>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name
</div>
<div class="mb-3">
    <strong>Department:</strong> @Model.Department
</div>
<div class="mb-3">
    <strong>Document:</strong>
    @if (!string.IsNullOrEmpty(Model.DocumentPath))
    {
        <a href="~/uploads/@Model.DocumentPath" target="_blank">View Document</a>
    }
    else
    {
        <span class="text-muted">No file uploaded</span>
    }
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="List" class="btn btn-secondary">Back to List</a>

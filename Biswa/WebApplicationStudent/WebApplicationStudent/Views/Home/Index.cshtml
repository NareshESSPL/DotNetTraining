@model List<WebApplicationStudent.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<div class="top-student-create">
    <h2>Student List</h2>

    @Html.ActionLink(
            "Create New Student",     // Link text
            "Create",                 // Action method
            "Home",                   // Controller name
            null,                     // Route values (optional)
            new { @class = "btn btn-success create-btn" } 
            )
</div>

<div class="table-container">
    <table class="student-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Enrollment Date</th>
                <th>Action</th>  <!-- New column for action buttons -->
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentID</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Age</td>
                    <td>@student.EnrollmentDate.ToShortDateString()</td>
                    <td class="actions">
                        <!-- Edit Button -->
                        @Html.ActionLink("Edit", "Create", "Home", new { id = student.StudentID }, new { @class = "btn btn-warning btn-sm me-2" })

                        <!-- Delete Button Form (styled inline, consistent with Edit) -->
                        <form asp-action="Delete" asp-controller="Home" asp-route-id="@student.StudentID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model IEnumerable<StudentManagementSystem.DTO.Student>

<h1>Student List</h1>
<p>
    @Html.ActionLink("Create New Student", "Create", "Student", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => student.StudentID)</td>
                <td>@Html.DisplayFor(m => student.FirstName)</td>
                <td>@Html.DisplayFor(m => student.LastName)</td>
                <td>@Html.DisplayFor(m => student.DateOfBirth)</td>
                <td>@Html.DisplayFor(m => student.Email)</td>
                <td>@Html.DisplayFor(m => student.PhoneNumber)</td>
                <td>@Html.DisplayFor(m => student.Address)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Student", new { id = student.StudentID }, new { @class = "btn btn-warning", style = "padding: 2px 5px; font-size: 9px;" })
                    @Html.ActionLink("Details", "Details", "Student", new { id = student.StudentID }, new { @class = "btn btn-info btn-sm", style = "padding: 2px 5px; font-size: 9px;" })
                    @Html.ActionLink("Delete", "Delete", "Student", new { id = student.StudentID },
                             new { @class = "btn btn-danger btn-sm", style = "padding: 2px 5px; font-size: 9px;", onclick = "return confirmDelete();" })

                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this student?");
    }
</script>

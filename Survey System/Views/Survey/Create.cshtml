@model Survey_System.DTO.SurveyDTO

@{
    ViewData["Title"] = "Create Survey";
}

<h2>Create Survey</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SurveyTypeID" class="control-label"></label>
                <input asp-for="SurveyTypeID" class="form-control" />
                <span asp-validation-for="SurveyTypeID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SurveyTypeName" class="control-label"></label>
                <input asp-for="SurveyTypeName" class="form-control" />
                <span asp-validation-for="SurveyTypeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModifiedBy" class="control-label"></label>
                <input asp-for="ModifiedBy" class="form-control" />
                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModifiedDate" class="control-label"></label>
                <input asp-for="ModifiedDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
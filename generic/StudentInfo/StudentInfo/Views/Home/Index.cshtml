@{
    ViewData["Title"] = "Home Page";
}
@model List<StudentInfo.Models.StudentModel>
@{
    Layout = "_Layout"; 
    }

<div class="text-center">
    

    <h2>Students</h2>
    <button><a href="/Home/Create">Add New Student</a></button>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>%
                <th>DOB</th>
                <th>Gender</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.StudentId</td>
                    <td>@s.FirstName @s.LastName</td>
                    <td>@s.DateOfBirth.ToShortDateString()</td>
                    <td>@s.Gender</td>
                    <td>@s.Email</td>
                    
                    <td class="space-x-2">
                        <a href="/Home/Edit/@s.StudentId" class="text-blue-500 hover:underline">Edit</a>
                        <a href="/Home/Delete/@s.StudentId" class="text-red-500 hover:underline"
                           onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>

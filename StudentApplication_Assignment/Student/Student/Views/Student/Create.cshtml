@model DTO.Students

<h1 class="text-center mb-4">Add New Student</h1>

<div class="container p-4 rounded shadow-sm" style="max-width: 700px; background: #f8f9fa;">
    @using (Html.BeginForm("Submit", "Student", FormMethod.Post, new { @class = "needs-validation" }))
    {
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <div class="mb-3">
            @Html.LabelFor(m => m.StudentName, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control", placeholder = "Enter student name" })
            @Html.ValidationMessageFor(m => m.StudentName, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.StudentEmail, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.StudentEmail, new { @class = "form-control", placeholder = "Enter email address" })
            @Html.ValidationMessageFor(m => m.StudentEmail, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.StudentAge, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.StudentAge, new { @class = "form-control", placeholder = "Enter age" })
            @Html.ValidationMessageFor(m => m.StudentAge, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.DOB, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Address, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = 3, placeholder = "Enter address" })
            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
        </div>

        @* <div class="mb-3"> *@
        @*     <label class="fw-bold">Gender</label><br /> *@
        @*     @foreach (var gender in (List<SelectListItem>)ViewData["Gender"]) *@
        @*     { *@
        @*         <div class="form-check form-check-inline"> *@
        @*             @Html.RadioButtonFor(m => m.Gender,gender.Text,  new { @class = "form-check-input" }) *@
        @*             <label class="form-check-label">@gender.Text</label> *@
        @*         </div> *@
        @*     } *@
        @*     @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger d-block mt-1" }) *@
        @* </div> *@
        <div class="mb-3">
            <label class="fw-bold">Gender</label><br />

            <div class="form-check form-check-inline">
                <input type="radio" asp-for="Gender" value="Male" class="form-check-input" id="Gender_Male" />
                <label class="form-check-label" for="Gender_Male">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="Gender" value="Female" class="form-check-input" id="Gender_Female" />
                <label class="form-check-label" for="Gender_Female">Female</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="Gender" value="Others" class="form-check-input" id="Gender_Others" />
                <label class="form-check-label" for="Gender_Others">Others</label>
            </div>

            <span asp-validation-for="Gender" class="text-danger d-block mt-1"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </div>
    }
</div>

@section scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

 @model IEnumerable<HELP.helpp>

@{
    ViewData["Title"] = "Players List";
}

<h2>Players</h2>

<p>
    <a class="btn btn-success" asp-action="AddPlayer">Add New Player</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Player ID</th>
            <th>Player Name</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.PlayerId</td>
                <td>@player.PlayerName</td>
                <td>@player.Age</td>
                <td>
                    <a class="btn btn-warning" asp-action="EditPlayer" asp-route-id="@player.PlayerId">Edit</a>
                    <a class="btn btn-danger" asp-action="DeletePlayer" asp-route-id="@player.PlayerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<IImage_Uploadd.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Student Details</h1>

<p>
    <a class="btn btn-danger text-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <img src="/StudentImages/@item.ImagePath" width="100px" height="100px" />
            </td>
            <td>
                <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-info"asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-warning text-primary"asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model Sprt.help
@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h4>Are you sure you want to delete this customer?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.age</dd>

        <dt class="col-sm-2">Document</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.DocumentPath))
            {
                <a href="@Model.DocumentPath" target="_blank">View Document</a>
            }
        </dd>
    </dl>

    <form asp-action="DeleteCustomerConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

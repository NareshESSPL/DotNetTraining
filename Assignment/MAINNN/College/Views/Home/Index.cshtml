@model List<SUPORT.help>
@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>
<a class="btn btn-primary mb-3" asp-action="AddStudent">Add New Student</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Branch</th>
            <th>Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Branch</td>
                <td>
                    @if (!string.IsNullOrEmpty(student.DocumentPath))
                    {
                        <a href="@student.DocumentPath" target="_blank">View</a>
                    }
                    else
                    {
                        <span>No File</span>
                    }
                </td>
                <td>
                    <a asp-action="UpdateStudent" asp-route-id="@student.Id" class="btn btn-warning">Update</a>

                    <a asp-action="DeleteStudent" asp-route-id="@student.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

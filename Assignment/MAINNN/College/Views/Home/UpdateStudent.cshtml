@model SUPORT.help

@{
    ViewData["Title"] = "Update Student";
}

<h2>Update Student</h2>

<form asp-action="UpdateStudent" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DocumentPath" /> <!-- So old path is retained -->

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Branch"></label>
        <input asp-for="Branch" class="form-control" />
        <span asp-validation-for="Branch" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Document:</label><br />
        @if (!string.IsNullOrEmpty(Model.DocumentPath))
        {
            <a href="@Model.DocumentPath" target="_blank">View Current Document</a>
        }
        else
        {
            <span>No document uploaded.</span>
        }
    </div>

    <div class="form-group">
        <label asp-for="Document">Upload New Document (optional):</label>
        <input asp-for="Document" type="file" class="form-control" />
        <span asp-validation-for="Document" class="text-danger"></span>
    </div>

    <br />
    <input type="submit" value="Update" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

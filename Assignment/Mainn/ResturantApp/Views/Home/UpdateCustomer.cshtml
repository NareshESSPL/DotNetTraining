 @model Help.hey;

@{
    ViewData["Title"] = "Update Customer";
}

<h2>Update Customer</h2>

<form asp-action="UpdateCustomer" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Age</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Order ID</label>
        <input asp-for="OrderId" class="form-control" readonly />
        <span asp-validation-for="OrderId" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

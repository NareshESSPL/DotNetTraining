 @model main.Traveller

<h2>Update Traveller</h2>

<form asp-action="UpdateTraveller" method="post">
    <input type="hidden" asp-for="TicketNo" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Seat No</label>
        <input asp-for="SeatNo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Flight Name</label>
        <input asp-for="FlightName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Update</button>
</form>

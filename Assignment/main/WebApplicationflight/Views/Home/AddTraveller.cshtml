@model main.Traveller

@{
    ViewData["Title"] = "Add Traveller";
}

<h2>Add Traveller</h2>

<form asp-action="AddTraveller" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ticket Number</label>
        <input asp-for="TicketNo" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Seat Number</label>
        <input asp-for="SeatNo" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Flight Name</label>
        <input asp-for="FlightName" class="form-control" />
    </div>
  
    <button type="submit" class="btn btn-success">Add Traveller</button>
</form>

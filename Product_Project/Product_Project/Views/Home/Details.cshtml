@model Product_Project.Models.Product

@{
    ViewData["Title"] = " Product Details";
}
@{
    if (TempData["message"] != null)
    {
        <h1>Message:@TempData["message"]</h1>
    }
}

<h1>Details of Product</h1>

<div>
    <h4>Product List</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Orderdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Orderdate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Receiveddate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Receiveddate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="List">Back to List</a>
</div>
